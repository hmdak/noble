{
  "author": "Sandeep Mistry",
  "maintainers": [
    "Jacob Rosenthal",
    "Luis Montes"
  ],
  "license": "MIT",
  "name": "noble",
  "description": "A Node.js BLE (Bluetooth Low Energy) central library.",
  "version": "1.9.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/sandeepmistry/noble.git"
  },
  "bugs": {
    "url": "https://github.com/sandeepmistry/noble/issues"
  },
  "keywords": [
    "bluetooth",
    "BLE",
    "bluetooth low energy",
    "bluetooth smart",
    "central"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=6.0"
  },
  "os": [
    "darwin",
    "linux",
    "freebsd",
    "win32"
  ],
  "dependencies": {
    "debug": "^4.1.1",
    "isomorphic-ws": "^4.0.1"
  },
  "optionalDependencies": {
    "bluetooth-hci-socket": "git://github.com/jrobeson/node-bluetooth-hci-socket.git#refactor",
    "noble-mac": "jrobeson/noble-mac#fork",
    "noble-winrt": "jrobeson/noble-winrt#fork"
  },
  "devDependencies": {
    "@types/debug": "^4.1.2",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.26",
    "@types/pify": "^3.0.2",
    "@types/sinon": "^5.0.7",
    "@types/web-bluetooth": "0.0.4",
    "@types/ws": "^6.0.1",
    "@typescript-eslint/eslint-plugin": "^1.4.0",
    "@typescript-eslint/parser": "^1.4.0",
    "async": "^2.6.2",
    "eslint": "^5.14.1",
    "eslint-config-prettier": "^4.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.3.1",
    "mocha": "^5.2.0",
    "prettier": "^1.16.4",
    "should": "^13.2.3",
    "sinon": "^6.3.5",
    "ts-node": "^8.0.2",
    "typescript": "^3.3.3",
    "ws": "^6.1.4"
  },
  "scripts": {
    "format:check": "prettier --list-different 'examples/**/*'  'lib/**/*' 'test/**/*' './*.{json,ts}'",
    "format:write": "prettier --write 'examples/**/*'  'lib/**/*' 'test/**/*' './*.{json,ts}'",
    "lint": "eslint --ext .js,.ts .",
    "build": "npm run lint && tsc --project .",
    "pretest": "npm run lint",
    "prepare": "tsc --project .",
    "test": "mocha -r ts-node/register -R spec test/*.ts"
  },
  "browser": {
    "./dist/lib/resolve-bindings.js": "./dist/lib/resolve-bindings-web.js"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "printWidth": 140,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format:write"
    }
  }
}
