{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "outDir": "dist",
    "declaration": true,
    "removeComments": false,
    "sourceMap": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./types/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
  "include": ["lib/**/*", "test/**/*", "types/**/*", "./*.ts"],
  "exclude": ["node_modules", "dist"]
}
